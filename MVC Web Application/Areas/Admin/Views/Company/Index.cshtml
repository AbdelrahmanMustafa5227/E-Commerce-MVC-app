@model List<Company>
<partial name="_Notification" />
<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Company List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="Upsert" class="btn btn-primary ">
            <i class="bi bi-plus-circle"></i>
            Create a New Company
        </a>
    </div>

</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Street Address</th>
            <th>City</th>
            <th>State</th>
            <th>Postal Code</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Company c in Model.OrderBy(u => u.Id))
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.PhoneNumber</td>
                <td>@c.StreetAddress</td>
                <td>@c.City</td>
                <td>@c.State</td>
                <td>@c.PostalCode</td>
                <td>
                    <div class="btn-group w-75" role="group">
                        <a asp-controller="Company" asp-action="Upsert" asp-route-id="@c.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Company" asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>

                </td>
            </tr>
        }
    </tbody>

</table>