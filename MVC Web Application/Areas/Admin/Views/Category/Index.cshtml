@model List<Category>
<partial name="_Notification"/>
<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Category List</h2>
    </div>
    <div class="col-6 text-end">
        <a  asp-action="Create" class="btn btn-primary "> 
            <i class="bi bi-plus-circle"></i>
            Create a New Category
        </a>
    </div>

</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Category c in Model.OrderBy(u=>u.displayOrder)){
            <tr>
                <td>@c.name</td>
                <td>@c.displayOrder</td>
                <td>
                    <div class="btn-group w-75" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id ="@c.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                    
                </td>
            </tr>
        }
    </tbody>

</table>